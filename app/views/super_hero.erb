        <p><label for="team[motto]">Team Motto: </label>
        <input type="text" name="team[:motto]" id="team[:motto]"></p>

      <h2>Hero 1</h2>

        <p><label for="hero_1_name">Hero's Name: </label>
        <input type="text" name="team[:heroes][][name]" value=""></p>

        <p><label for="hero_1_power">Hero's Power: </label>
        <input type="text" name="team[:heroes][][power]" value=""></p>

        <p><label for="hero_1_biography">Hero's Biography: </label>
        <input type="text" name="team[:heroes][][biography]" value=""></p>


      <input type="submit" name="Submit" value="submit">
    </form>

  </body>
